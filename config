bar {
    output DVI-I-1
    output DVI-D-0
    mode dock
    position bottom
    modifier Mod1
    tray_output DVI-I-1
    workspace_buttons yes
    font xft:DejaVu Sans Bold 10.5
    colors {
        background #272822
        statusline #B37300
        focused_workspace  #a9a9a9 #7F6399 #ffffff
        active_workspace   #333333 #4d4d3a #ffffff
        inactive_workspace #4D4D4D #272822 #888888
        urgent_workspace   #a9a9a9 #a0522d #ffffff
    }
}

